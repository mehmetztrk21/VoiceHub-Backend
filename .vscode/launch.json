    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/app.ts",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "!**/node_modules/**"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "env": {
                "PORT": "5001"
            },
            
        }
       
    ]
}